          },
          "responses": {
            "200": {
              "description": "User's photo has been updated successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "status": {
                        "type": "integer",
                        "example": 200
                      },
                      "message": {
                        "type": "string",
                        "example": "User's photo has been updated successfully"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "$ref": "../../../components/responses/404.yaml"
            },
            "500": {
              "$ref": "../../../components/responses/500.yaml"
            }
          }
        }
      }
    },
    "/user/dailyNorm": {
      "put": {
        "tags": [
          "User"
        ],
        "summary": "Updating daily water norm",
        "operationId": "updateDailyNorm",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dailyNorm": {
                    "type": "number",
                    "example": 1500,
                    "description": "Updating daily water norm"
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Daily water norm updated successfully",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string",
                            "example": "Daily water norm updated successfully"
                          },
                          "dailyNorm": {
                            "type": "number",
                            "example": 1500
                          }
                        }
                      }
                    }
                  }
                },
                "404": {
                  "$ref": "../../../components/responses/404.yaml"
                },
                "500": {
                  "$ref": "../../../components/responses/500.yaml"
                }
              }
            }
          }
        }
      }
    },
    "/user/edit": {
      "patch": {
        "tags": [
          "User"
        ],
        "summary": "Editing user information",
        "operationId": "editUserInfo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe",
                    "description": "User's name"
                  },
                  "email": {
                    "type": "string",
                    "example": "johndoe@gmail.com",
                    "description": "User's email"
                  },
                  "oldPassword": {
                    "type": "string",
                    "example": "oldpassword123",
                    "description": "Old password"
                  },
                  "password": {
                    "type": "string",
                    "example": "newpassword123",
                    "description": "New password"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "newpassword123",
                    "description": "Confirming new password"
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "User's info has been updated successfully",
                  "content": {
                    "application/json": {
                      "schema": {
