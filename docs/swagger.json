                          "status": {
                            "type": "integer",
                            "example": 200
                          },
                          "message": {
                            "type": "string",
                            "example": "User's info has been updated successfully"
                          },
                          "data": {
                            "$ref": "../components/schemas/user.yaml"
                          }
                        }
                      }
                    }
                  }
                },
                "400": {
                  "$ref": "../../../components/responses/400.yaml"
                },
                "404": {
                  "$ref": "../../../components/responses/404.yaml"
                },
                "500": {
                  "$ref": "../../../components/responses/500.yaml"
                }
              }
            }
          }
        }
      }
    },
    "/user/info": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Retrieving user information",
        "operationId": "getUserInfo",
        "responses": {
          "200": {
            "description": "User has been found successfully",
            "content": {
              "application/json": null,
              "schema": {
                "404": {
                  "$ref": "../../../components/responses/404.yaml"
                },
                "500": {
                  "$ref": "../../../components/responses/500.yaml"
                },
                "type": "object",
                "properties": {
                  "status": {
                    "type": "integer",
                    "example": 200
                  },
                  "message": {
                    "type": "string",
                    "example": "User has been found successfully"
                  },
                  "data": {
                    "$ref": "../components/schemas/user.yaml"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/water": {
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": [
          "Water"
        ],
        "summary": "Add a new water intake record",
        "operationId": "postWater",
        "description": "Adds a new water intake record based on provided date",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "waterVolume",
                  "date"
                ],
                "properties": {
                  "waterVolume": {
                    "type": "number",
                    "example": 250,
                    "description": "The amount of water consumed in milliliters"
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-09-01T14:00",
                    "description": "The date of water consumption"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Adds a new water intake record",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a water record!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/water"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          }
        }
      }
    },
    "/water/{id}": {
      "patch": {
        "tags": [
          "Water"
        ],
        "summary": "Update a water intake record",
        "operationId": "updateWater",
        "description": "Update a water intake record by user id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string",
              "example": "65ca67e7ae7f10c88b598384"
            },
            "required": true,
            "description": "The date of the record to update"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "waterVolume": {
                    "type": "number",
                    "description": "The updated amount of water consumed in milliliters"
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-09-01T14:00",
                    "description": "The updated date of water consumption"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update a water intake record by user id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully updated a water intake record!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/water"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      },
      "delete": {
        "tags": [
          "Water"
        ],
        "summary": "Delete a water",
        "operationId": "deleteWater",
        "description": "Delete a water for user id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "65ca67e7ae7f10c88b598384"
            },
            "description": "The water for this ID has been deleted."
          }
        ],
        "responses": {
          "200": {
            "description": "The water for this ID has been deleted.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "The water for this ID has been deleted."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/water/month": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get water intake information for a specific month",
        "operationId": "getWaterForMonth",
        "description": "Retrieves water intake records for a specific month",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "startOfMonth": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-09-01",
                    "description": "The starting date of the month for which to retrieve water intake information"
                  },
                  "endOfMonth": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-09-30",
                    "description": "The ending date of the month for which to retrieve water intake information"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully retrieved water intake information for the specified month",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Water data retrieved successfully"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "date": {
                            "type": "string",
                            "example": "2024-10-20"
                          },
                          "dailyRecords": {
                            "type": "number",
                            "example": 1500
                          },
                          "consumptionCount": {
                            "type": "integer",
                            "example": 3
                          },
                          "dailyNorm": {
                            "type": "number",
                            "example": 1.8,
                            "description": "Daily recommended water intake in liters"
                          },
                          "percentage": {
                            "type": "string",
                            "example": "83.33%"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/water/today": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get information on water intake for a day",
        "operationId": "getWaterForToday",
        "description": "Retrieves water intake records for a specific day",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-10-20",
                    "description": "The date for which to retrieve water intake information"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully retrieved water intake information for the specified day",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "percentage": {
                      "type": "string",
                      "example": "50%"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/water"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "user": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "gender",
          "dailyNorma"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Unique identifier for the user",
            "example": "60c72b2f9b1d8b3b4c7e4e57"
          },
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "example": "test@gmail.com"
          },
          "gender": {
            "type": "string",
            "description": "User's gender",
            "enum": [
              "woman",
              "man"
            ],
            "example": "woman"
          },
          "dailyNorma": {
            "type": "number",
            "description": "User's daily water intake in milliliters",
            "example": 1500
          }
        }
      },
      "water": {
        "type": "object",
        "required": [
          "date",
          "dailyNorm",
          "waterVolume",
          "userId"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "description": "The date of the water consumption record",
            "example": "2024-10-20"
          },
          "dailyNorm": {
            "type": "number",
            "description": "User's daily water intake in milliliters",
            "example": 1500
          },
          "waterVolume": {
            "type": "number",
            "description": "The volume of water consumed in milliliters (1-5000 ml)",
            "example": 500
          },
          "userId": {
            "type": "string",
            "description": "User's ID",
            "example": "60c72b2f9b1d8b3b4c7e4e57"
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "BadRequestError",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "BadRequestError"
                },
                "data": {
